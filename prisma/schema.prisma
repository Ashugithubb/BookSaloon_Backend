generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CUSTOMER
  OWNER
  STAFF
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum NotificationType {
  APPOINTMENT_BOOKED
  APPOINTMENT_CONFIRMED
  APPOINTMENT_CANCELLED
  APPOINTMENT_COMPLETED
  APPOINTMENT_NO_SHOW
  APPOINTMENT_ASSIGNED
  STAFF_CLAIMED
  REVIEW_RECEIVED
  STAFF_INVITED
  BUSINESS_APPROVED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  role      Role     @default(CUSTOMER)
  isVerified Boolean @default(false)
  verificationToken String?
  tokenExpires DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  businesses   Business[] // If owner, can have businesses
  appointments Appointment[] // As customer
  reviews      Review[]
  staffProfile Staff? // If staff, linked to staff record
  notifications Notification[]
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  data      Json?    // Additional metadata
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([read])
}

model Business {
  id          String   @id @default(uuid())
  name        String
  description String?
  address     String?
  phone       String?
  latitude    Float?
  longitude   Float?
  category    String?
  images      String[] @default([])
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  services     Service[]
  staff        Staff[]
  appointments Appointment[]
  reviews      Review[]
  hours        BusinessHour[]
}

model BusinessHour {
  id         String   @id @default(uuid())
  dayOfWeek  Int      // 0=Sunday, 1=Monday, etc.
  startTime  String   // "09:00"
  endTime    String   // "17:00"
  isOpen     Boolean  @default(true)
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  duration    Int      // in minutes
  price       Float
  discount    Float?   @default(0) // discount percentage (0-100)
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  appointments Appointment[]
}

model Staff {
  id         String   @id @default(uuid())
  name       String
  email      String?  @unique
  phone      String?
  image      String?
  title      String?  // e.g., "Hair Stylist", "Barber", "Nail Technician"
  yearsOfExperience Int? @default(0)
  languages  String[] @default([]) // e.g., ["English", "Hindi", "Punjabi"]
  rating     Float    @default(0)
  reviewCount Int     @default(0)
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  userId     String?  @unique
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  invitationToken String?
  invitationExpires DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  appointments Appointment[]
  reviews      Review[]
}

model Appointment {
  id         String            @id @default(uuid())
  date       DateTime
  status     AppointmentStatus @default(PENDING)
  customerId String
  customer   User              @relation(fields: [customerId], references: [id])
  businessId String
  business   Business          @relation(fields: [businessId], references: [id])
  serviceId  String
  service    Service           @relation(fields: [serviceId], references: [id])
  staffId    String?
  staff      Staff?            @relation(fields: [staffId], references: [id])
  completionOtp String?
  otpExpires    DateTime?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
}

model Review {
  id         String   @id @default(uuid())
  rating     Int
  comment    String?
  customerId String
  customer   User     @relation(fields: [customerId], references: [id])
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  staffId    String?
  staff      Staff?   @relation(fields: [staffId], references: [id])
  createdAt  DateTime @default(now())
}
